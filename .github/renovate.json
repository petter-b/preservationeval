{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":approveMajorUpdates",
    ":automergeMinor",
    ":automergeRequireAllStatusChecks",
    ":enableVulnerabilityAlerts",
    ":ignoreUnstable"
  ],
  "minimumReleaseAge": "14 days",
  "packageRules": [
    {
      "description": "Real runtime/production dependencies (minor/patch) from pyproject.toml",
      "matchManagers": ["pep621"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin"
      ],
      "automerge": true,
      "labels": ["release-patch"]
    },
    {
      "description": "Real runtime/production dependencies (major) from pyproject.toml",
      "matchManagers": ["pep621"],
      "matchDepTypes": ["dependencies"],
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true,
      "automerge": false
    },
    {
      "description": "Other runtime/production dependencies (minor/patch)",
      "matchManagers": ["npm"],
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin"
      ],
      "automerge": true,
      "labels": ["release-patch"]
    },
    {
      "description": "Other real runtime/production dependencies (major)",
      "matchManagers": ["npm"],
      "matchUpdateTypes": [
        "major"
      ],
      "dependencyDashboardApproval": true,
      "automerge": false
    },
    {
      "description": "Group other dependenencies",
      "matchManagers": [
        "pep621",
        "github-actions",
        "devcontainer"
      ],
      "groupName": "Update other dependencies",
      "automerge": true,
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin"
      ]
    }
  ]
}
